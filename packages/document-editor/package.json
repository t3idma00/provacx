{
  "name": "@provacx/document-editor",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*/index.ts",
      "default": "./src/components/*/index.ts"
    },
    "./store": {
      "types": "./src/store/index.ts",
      "default": "./src/store/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    },
    "./templates": {
      "types": "./src/templates/index.ts",
      "default": "./src/templates/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "typecheck": "pnpm run type-check"
  },
  "dependencies": {
    "zustand": "^4.5.2",
    "immer": "^10.0.4",
    "nanoid": "^5.0.7",
    "lucide-react": "^0.378.0",
    "@provacx/shared": "workspace:*",
    "@provacx/ui": "workspace:*"
  },
  "devDependencies": {
    "@provacx/eslint-config": "workspace:*",
    "@provacx/typescript-config": "workspace:*",
    "@types/react": "^18.2.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
